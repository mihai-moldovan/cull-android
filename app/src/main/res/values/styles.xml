<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonRounded">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_rounded_height</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:fontFamily">@font/kievitcomppro_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_rounded_font</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="DefaultTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/kievitcomppro_light</item>
        <item name="android:textSize">@dimen/text_font</item>
    </style>

    <style name="TitleTextAppearance" parent="DefaultTextAppearance">
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="QuizTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/kievitcomppro</item>
        <item name="android:paddingTop">@dimen/quiz_tab_padding_v</item>
        <item name="android:paddingBottom">@dimen/quiz_tab_padding_v</item>
        <item name="android:textColor">@color/quiz_tab_text</item>
        <item name="android:textSize">@dimen/quiz_tab_font</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="SpaceTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/space_edit_background</item>
        <item name="android:layout_marginTop">@dimen/space_edit_spacing</item>
        <item name="colorAccent">@color/gold</item>
        <item name="suffixTextColor">@color/white_gold_selected</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorControlHighlight">@color/gold</item>
        <item name="errorEnabled">true</item>
    </style>


    <style name="SpaceEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="fontFamily">@font/kievitcomppro</item>
        <item name="android:textSize">@dimen/space_edit_font</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SpaceEditTitle">
        <item name="android:textColor">@color/white_gold_selected</item>
        <item name="android:fontFamily">@font/kievitcomppro</item>
        <item name="android:paddingStart">@dimen/space_edit_title_padding</item>
        <item name="android:paddingEnd">@dimen/space_edit_title_padding</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:layout_marginTop">@dimen/space_edit_title_margin_v</item>
        <item name="android:layout_marginStart">@dimen/space_edit_title_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/space_edit_font</item>
    </style>

    <style name="SpaceRoomTypeView">
        <item name="android:fontFamily">@font/kievitcomppro_bold</item>
        <item name="android:textSize">@dimen/space_room_type_font</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white_gold_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:checkMark">@null</item>
        <item name="android:drawablePadding">@dimen/space_room_type_title_spacing</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AuthInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/gold</item>
        <item name="suffixTextColor">@color/white_gold_selected</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorControlHighlight">@color/gold</item>
        <item name="android:layout_marginStart">@dimen/auth_screen_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_screen_margin</item>
        <item name="android:layout_marginTop">@dimen/auth_field_spacing</item>
    </style>

    <style name="AuthInputLayout.Password">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="AuthEditText" parent="SpaceEditText">
        <item name="android:textSize">@dimen/auth_field_font</item>
        <item name="android:background">@drawable/space_edit_background</item>
        <item name="android:layout_height">@dimen/auth_field_height</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AuthEditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AuthEditTitle" parent="SpaceEditTitle">
        <item name="android:textSize">@dimen/auth_field_text_font</item>
    </style>

    <style name="FiltersSectionTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kievitcomppro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/filters_section_title_font</item>
        <item name="android:layout_marginTop">@dimen/filters_item_vertical_padding</item>
    </style>

</resources>