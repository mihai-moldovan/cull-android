<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/products_card_corner" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/products_stroke_selected" android:color="@color/gold" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/products_card_corner" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/products_stroke" android:color="#979797" />
        </shape>
    </item>
</selector>