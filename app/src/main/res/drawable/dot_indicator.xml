<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="@dimen/dot_size_selected" android:height="@dimen/dot_size_selected" />
                    <stroke android:width="@dimen/dot_stroke" android:color="@color/gold" />
                </shape>
            </item>
            <item android:bottom="@dimen/dot_inner_padding" android:left="@dimen/dot_inner_padding" android:right="@dimen/dot_inner_padding" android:top="@dimen/dot_inner_padding">
                <shape android:shape="oval">
                    <solid android:color="@color/gold" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="@dimen/dot_size_unselected" android:height="@dimen/dot_size_unselected" />
        </shape>
    </item>
</selector>
