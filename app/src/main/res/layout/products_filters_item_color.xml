<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/filters_color_item_spacing">

    <FrameLayout
        android:id="@+id/selectionView"
        android:layout_width="@dimen/filters_color_item_size"
        android:layout_height="@dimen/filters_color_item_size"
        android:background="@drawable/filters_color_selection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/filters_color_selection_thickness"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/selectionView"
        app:layout_constraintEnd_toEndOf="@id/selectionView"
        app:layout_constraintStart_toStartOf="@id/selectionView"
        app:layout_constraintTop_toTopOf="@id/selectionView" />
</androidx.constraintlayout.widget.ConstraintLayout>

