<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.texts.TextsActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:scaleType="center"
        android:src="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:scaleType="center"
        android:src="@drawable/btn_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kievitcomppro"
        android:gravity="center"
        android:letterSpacing="0.07"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/texts_title_font"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnClose"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        tools:text="Termeni si conditii" />

    <TextView
        android:id="@+id/btnOk"
        style="@style/ButtonRounded"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/texts_btn_margin"
        android:text="@string/btn_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/texts_activity_padding"
        android:layout_marginTop="@dimen/texts_btn_margin"
        android:layout_marginEnd="@dimen/texts_activity_padding"
        android:layout_marginBottom="@dimen/texts_btn_margin"
        android:background="@android:color/transparent"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@+id/btnOk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />


</androidx.constraintlayout.widget.ConstraintLayout>